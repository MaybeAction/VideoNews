<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maybe.videonews">
    <!--网络访问权限-->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <!--SD卡的读写权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <application
        android:name=".activity.VideoNewsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.maybe.videonews.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.maybe.videonews.activity.base.MyBaseActivity"></activity>
        <activity android:name=".ui.news.comments.CommentActivity"></activity>
        <activity android:name="com.example.maybe.videoplayer.full.VideoViewActivity"></activity>
    </application>

</manifest>